<Window x:Class="Example_MVVM_TinhToanDam.View.BeamView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example_MVVM_TinhToanDam.View"
        xmlns:viewmodel="clr-namespace:Example_MVVM_TinhToanDam.ViewModel"
        mc:Ignorable="d"
        Title="Tính toán Dầm &amp; Bản sàn (TCVN)" Height="600" Width="1000">

    <Window.DataContext>
        <viewmodel:BeamViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Thông số đầu vào" Grid.Row="0" Margin="0,0,0,10" Padding="5">
            <WrapPanel Orientation="Horizontal">
                <StackPanel Margin="10,5">
                    <TextBlock Text="Nhịp L (m)" Style="{StaticResource LabelStyle}"/>
                    <TextBox Width="80" Text="{Binding Length}"/>
                </StackPanel>
                <StackPanel Margin="10,5">
                    <TextBlock Text="Tiết diện b (m)" Style="{StaticResource LabelStyle}"/>
                    <TextBox Width="80" Text="{Binding Width}"/>
                </StackPanel>
                <StackPanel Margin="10,5">
                    <TextBlock Text="Tiết diện h (m)" Style="{StaticResource LabelStyle}"/>
                    <TextBox Width="80" Text="{Binding Height}"/>
                </StackPanel>

                <StackPanel Margin="10,5">
                    <TextBlock Text="Tải q (kN/m)" Style="{StaticResource LabelStyle}"/>
                    <TextBox Width="80" Text="{Binding Load}"/>
                </StackPanel>
                <StackPanel Margin="10,5">
                    <TextBlock Text="Vị trí / Sơ đồ tính" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Width="180" 
                              ItemsSource="{Binding MomentOptions}" 
                              DisplayMemberPath="Key"
                              SelectedItem="{Binding SelectedOption}"/>
                </StackPanel>

                <StackPanel Margin="10,5">
                    <TextBlock Text="Rb (Bê tông) kN/m²" Style="{StaticResource LabelStyle}"/>
                    <TextBox Width="100" Text="{Binding Rb}"/>
                </StackPanel>
                <StackPanel Margin="10,5">
                    <TextBlock Text="Rs (Cốt thép) kN/m²" Style="{StaticResource LabelStyle}"/>
                    <TextBox Width="100" Text="{Binding Rs}"/>
                </StackPanel>

                <Button Content="Tính toán" Width="100" Height="25" Margin="10,18,0,0" 
                        Command="{Binding AddBeamCommand}" FontWeight="Bold"/>
            </WrapPanel>
        </GroupBox>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Beams}" AutoGenerateColumns="False" 
                  CanUserAddRows="False" Margin="0,0,0,10" AlternatingRowBackground="#F5F5F5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40" />
                <DataGridTextColumn Header="Vị trí" Binding="{Binding PositionName}" Width="150" />
                <DataGridTextColumn Header="L (m)" Binding="{Binding Length}" />
                <DataGridTextColumn Header="Tiết diện (b x h)" Binding="{Binding Width}" />

                <DataGridTextColumn Header="Momen (kNm)" 
                                    Binding="{Binding CalculatedMoment, StringFormat=N2, Mode=OneWay}" 
                                    FontWeight="Bold" Foreground="#D32F2F"/>

                <DataGridTextColumn Header="αₘ" Binding="{Binding AlphaM, StringFormat=N3, Mode=OneWay}" />

                <DataGridCheckBoxColumn Header="An toàn?" 
                                        Binding="{Binding IsSafe, Mode=OneWay}" 
                                        IsReadOnly="True"/>

                <DataGridTextColumn Header="As tính toán (cm²)" 
                                    Binding="{Binding RequiredAs, StringFormat=N2, Mode=OneWay}" 
                                    FontWeight="Bold" Foreground="Blue" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" Content="Xuất Excel" Width="120" Height="30" HorizontalAlignment="Right" 
                Command="{Binding ExportToExcelCommand}" />
    </Grid>
</Window>